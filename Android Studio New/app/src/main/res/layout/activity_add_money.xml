<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".AddMoneyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/olive_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Money"
                android:textAlignment="center"
                android:textColor="@color/olive"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Amount to add:"
                android:layout_marginTop="50sp"
                android:textColor="@color/olive"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/addMoney_amount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/olive_white_border"
                android:drawableLeft="@drawable/baseline_currency_rupee_24"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:hint="Amount"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/addMoney_proceed_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/olive"
                android:text="Proceed"
                android:textColor="@color/golden"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/addMoney_home_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/olive"
                android:text="Back to Home"
                android:textColor="@color/golden"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
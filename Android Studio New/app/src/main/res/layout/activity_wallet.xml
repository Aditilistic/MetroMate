<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".WalletActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/olive_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textAlignment="center"
                android:textColor="@color/olive"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Wallet Balance:"
                android:layout_marginTop="50sp"
                android:textColor="@color/olive"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/wallet_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@drawable/olive_white_border"
                android:paddingTop="20sp"
                android:text=""
                android:padding="20dp"
                android:textColor="@color/olive"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <Button
                android:id="@+id/wallet_add_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/olive"
                android:text="Add Balance"
                android:textColor="@color/golden"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/wallet_home_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/olive"
                android:text="Back to Home"
                android:textColor="@color/golden"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>